---
batch_connect:
  template: "basic"
  set_host: "host=$(hostname | awk '{print $1}')"

script:
  native:
    - "-N"
    - "<%= bc_num_slots.blank? ? 1 : bc_num_slots.to_i %>"
    - "--cpus-per-task"
    - "<%= num_cores.blank? ? 1 : num_cores.to_i %>"
    - "--gpus-per-node"
    - "<%= gpus_per_node.blank? ? 0 : gpus_per_node.to_i %>"
    - "--mem"
    - "<%= mem_per_node.blank? ? 0 : mem_per_node.to_i %>"
